class user_input:
  def __init__(self, instrument, indicator, surprise_sign_input, surprise_magnitude):
    self.instrument=input("What instrument?") #to link to drop down
    self.indicator=input("What indicator?") #to link to autofill
    self.surprise_sign=("What direction?") #to link to drop down (exceed, meet, below expections)
    self.surprise_magnitude=("What magnitude?") #to link to drop down (large, medium, small)
    
def surprise_sign_calc(actual,median):
  if actual - median > 0:
    return "Exceed"
  elif actual - median = 0:
    return "Meet"
  else actual - median <0:
    return "Below"

surprise_sign=df.apply(surprise_sign_calc, axis=1, raw=False, result_type=expand)


    
